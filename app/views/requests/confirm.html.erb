<div class="container-full bg-light p-5 form-container">
  <div class="text-center text-light p-5">
    <h1>CONFIRMATION</h1>
  </div>
  <div class="container bg-light border border-dark rounded-lg p-5">
    <div class="row align-center text-center">
      <div class="col bg-info py-2 border rounded-left rounded-pill" id="step-container">
        <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x fa-inverse"></i>
          <strong class="fa-stack-1x text-info">1</strong></span>
        <strong class="text-light">New</strong>
      </div>
      <div class="col bg-info py-2 border rounded-left rounded-pill" id="step-container">
        <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x fa-inverse"></i>
          <strong class="fa-stack-1x text-info">2</strong></span>
        <strong class="text-light">Confirm</strong>
      </div>
      <div class="col bg-light py-2 border-top border-bottom" id="step-container">
        <span class="fa-stack">
          <i class="fa fa-circle fa-stack-2x" id="step-circle-disabled"></i>
          <strong class="fa-stack-1x text-secondary">3</strong></span>
        <strong class="text-secondary">Finish</strong>
      </div>
    </div>
    <%= form_for (@request), url: job_requests_done_path(@job), method: :get, html: {class: "form-horizontal center"} do |f| %>
      <div class="form-row">
        <div class="col no-padding">
          <label>Job name:</label> <%= @job.name %>
        </div>
      </div>
      <div class="form-row">
        <div class="col no-padding">
          <label>Job company:</label> <%= @job.company_name %>
        </div>
      </div>
      <div class="form-row">
        <div class="col no-padding pr-2">
          <label>Full name:</label> <%= @request.fname %> <%= @request.lname %>
          <%= f.hidden_field(:fname, value: @request.fname) %>
          <%= f.hidden_field(:lname, value: @request.lname) %>
        </div>
      </div>
      <div class="form-row">
        <div class="col no-padding">
          <label>Email:</label> <%= @request.email %>
          <%= f.hidden_field(:email, value: @request.email) %>
        </div>
      </div>
      <div class="form-row">
        <div class="col no-padding">
          <label>CV link:</label> <%= @request.cv %>
          <%= f.hidden_field(:cv, value: @request.cv) %>
        </div>
      </div>

      <div class="row align-center">
        <div class="col-4 col-md-10 text-right">
          <%= link_to "Edit", new_job_request_path(request: { fname: @request.fname, lname: @request.lname, email: @request.email, cv: @request.cv }), class: "btn btn-secondary py-2 px-4" %>
        </div>
        <div class="col-4 col-md-1 text-left">
          <%= f.submit "Submit", class: "btn btn-info px-5 py-2" %>
        </div>
      </div>
      </div>
    <% end %>
    </div>
</div>
