<div class="container-full bg-light p-5 form-container">
  <div class="text-center text-light p-5">
    <h1>APPLY FOR JOB</h1>
  </div>
  <div class="container bg-light border border-dark rounded-lg p-5">
    <%= render "step_navigation" %>
    <%= form_for (@request), url: job_requests_confirm_path(@job), method: :post, html: { multipart: true } do |f| %>
      <div class="form-row">
        <div class="col no-padding pr-2">
          <%= f.label :fname, class: "label" %>
          <%= f.text_field :fname, class: "form-control input" %>
        </div>
        <div class="col no-padding">
          <%= f.label :lname, class: "label" %>
          <%= f.text_field :lname, class: "form-control input" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col no-padding">
          <%= f.label :email, class: "label" %>
          <%= f.email_field :email, class: "form-control input", value: current_user.email %>
        </div>
      </div>

      <div class="form-row">
        <div class="col no-padding">
          <%= f.label :cv, "Upload CV", class: "custom-file-label", for: "customFile" %>
          <%= f.file_field :cv, class: "custom-file-input", id: "customFile" %>
        </div>
      </div>

      <div class="row align-center pt-5">
        <div class="col-4 col-md-10 text-right">
          <%= submit_tag("Reset", {name: "reset", id: "reset_button", type: "reset", class: "btn btn-secondary py-2"}) %>
        </div>
        <div class="col-4 col-md-1 text-left">
          <%= f.submit "Next", class: "btn btn-info px-5 py-2" %>
        </div>
      </div>
      </div>
    <% end %>
    </div>
</div>

<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
