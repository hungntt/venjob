<div class="container-full bg-light p-5 form-container">
  <div class="text-center text-light p-5">
    <h1>LOG IN</h1>
  </div>
  <div class="container bg-light border border-dark rounded-lg p-5  align-center">
    <%= form_for(resource, as: resource_name, url: session_path(resource_name), class: "form-horizontal center") do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="form-row">
        <div class="col no-padding">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control input" %>
        </div>
      </div>

      <div class="form-row">
        <div class="col no-padding">
          <%= f.label :password %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
          <% end %><br/>
          <%= f.password_field :password, autocomplete: "current-password", class: "form-control input" %>
        </div>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="custom-control custom-checkbox pt-2 text-center">
          <%= f.check_box :remember_me, class: "custom-control-input", id: "customCheck"%>
          <%= f.label :remember_me, class: "custom-control-label", for: "customCheck" %>
        </div>
      <% end %>

      <div class="actions row d-flex justify-content-center pt-3">
        <%= f.submit "Log in", class: "btn btn-info px-5 py-2 my-2" %>
      </div>
      <div class="text-center">
        <%= render "devise/shared/links" %>
      </div>
    <% end %>
  </div>
</div>
