<div class="top-industries">
  <div class="container-fullwidth py-5 bg-light text-dark">
    <h2 class="text-center mt-0">Top industries</h2>
    <hr class="divider my-4 bg-info">
    <div class="row" id="info-box">
      <% hash = IndustryJob.group(:industry_id).order('count(*) desc').count('id') %>
      <% array = hash.to_a %>
      <% (0..10).each do |industry| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="mt-5">
            <h3 class="h4 mb-2"><%= Industry.find_by_id(array[industry][0]).name %></h3>
            <p class="text-muted mb-0"><%= pluralize(array[industry][1], "jobs") %></p>
          </div>
        </div>
      <% end %>
      <div class="col-lg-3 col-md-6 text-center">
        <%= link_to root_path do %>
          <div class="mt-5">
            <h3 class="h4 mb-2 text-dark see-more-text">See more</h3>
            <%= image_tag("see-more-btn.png", size: "30x30") %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
</div>