<div class="top-cities">
  <div class="container-fullwidth py-5 bg-dark text-white">
    <h2 class="text-center mt-0">Top cities</h2>
    <hr class="divider my-4 bg-info">
    <div class="row">
      <% hash = Job.group(:city_id).order('count(*) desc').count('id') %>
      <% array = hash.to_a %>
      <% (0..10).each do |city| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="mt-5">
            <h3 class="h4 mb-2"><%= City.find_by_id(array[city][0]).name %></h3>
            <p class="text-muted mb-0"><%= pluralize(array[city][1], "jobs") %></p>
          </div>
        </div>
      <% end %>
      <div class="col-lg-3 col-md-6 text-center">
      <%= link_to root_path do %>
          <div class="mt-5">
            <h3 class="h4 mb-2 text-white see-more-text">See more</h3>
            <%= image_tag("see-more-btn-white.png", size: "30x30") %>
          </div>
      <% end %>
      </div>
    </div>
  </div>
</div>
</div>