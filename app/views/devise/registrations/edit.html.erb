<div class="container">
  <div class="modal-body">
    <div style="text-align: center;">
      <%= image_tag "https://3.bp.blogspot.com/-NbuCiSzSexA/WafsJZMb9fI/AAAAAAAAhiM/DnhbVyUGSi47tIUZTyh4CWMa7rw_iGnLgCLcBGAs/s1600/1408830065792.jpg", class: "rounded-circle", width: "140", height: "140" %>
    </div>
    <hr>

    <div style="text-align: center;">
      <h3>Update account information</h3>
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {method: :put}) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <%= f.label :fname, "First name", class: "pt-3" %>
        <%= f.text_field :fname, class: "form-control" %>

        <%= f.label :lname, "Last name", class: "pt-3"  %>
        <%= f.text_field :lname, class: "form-control" %>

        <%= f.label :email, class: "pt-3" %>
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
        <%= f.label :resume, "Upload CV", class: "pt-3"  %>
        <div class="custom-file">
          <%= f.label :resume, "Choose file", class: "custom-file-label", for: "customFile" %>
          <%= f.file_field :resume, class: "custom-file-input" %>
        </div>
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>

        <div class="field">
          <%= f.label :password, "New password", class: "pt-3" %> <i>(leave blank if you don't want to change it)</i><br/>
          <% if @minimum_password_length %>
            <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
          <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>

        </div>

        <div class="field">
          <%= f.label :password_confirmation, class: "pt-3" %><br/>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
        </div>

        <div class="field">
          <%= f.label :current_password, class: "pt-3" %> <i>(we need your current password to confirm your changes)</i><br/>
          <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
        </div>

        <div class="pt-3">
          <%= f.submit "Update", class: "btn btn-info px-5" %>
        </div>
      <% end %>
      <hr>
      <h3 class="mt-3">Cancel my account</h3>

      <%= button_to "Cancel my account", registration_path(resource_name), data: {confirm: "Are you sure?"}, method: :delete, class: "btn btn-danger px-5 py-2" %>
      <hr>
      <%= link_to "Back", :back, class: "btn btn-secondary px-5 py-2 mt-5" %>
    </div>
  </div>
</div>
<script>
    // Add the following code if you want the name of the file appear on select
    $(".custom-file-input").on("change", function () {
        var fileName = $(this).val().split("\\").pop();
        $(this).siblings(".custom-file-label").addClass("selected").html(fileName);
    });
</script>
