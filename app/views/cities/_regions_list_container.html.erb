<div class="countries-list">
  <div class="container-fullwidth py-5 bg-dark text-white">
    <h2 class="text-center mt-0">COUNTRIES LIST</h2>
    <hr class="divider my-4 bg-info">
    <div class="row" id="info-box">
      <% @countries_job_list.each do |country, job_count| %>
        <div class="col-lg-3 col-md-6 text-center">
          <div class="mt-5">
            <h3 class="h4 mb-2 text-white see-more-text"><%= link_to(country, :anchor => country) %></h3>
            <p class="text-muted mb-0"><%= pluralize(job_count, "job") %></p>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
</div>
